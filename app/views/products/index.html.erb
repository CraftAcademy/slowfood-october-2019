<% if owner_signed_in? %>
  <h3 id="owner">Welcome Owner: <%= current_owner.email %></h3>
<% end %>

<div id="topPicks">
  <h1>Greta's Menu of the Day</h1>
</div>
<% @categories.each do |category| %>
    <div class="card">
      <h3><%= category.name %></h3>
      <% category.products.each do |product| %>
        <ul>
          <li class="innerCard" id=<%= dom_id(product) %>><%= product.name %>
            <ul>
              <li><%= product.description %></li>
              <li><%= product.price %> SEK</li>
              <% if owner_signed_in? %>
                <%= button_to 'Delete Item', product_path(id: product.id), method: :delete, data: { confirm: "Are you sure you want to delete #{product.name} from the menu?" }  %>
              <% end %>
              <% if user_signed_in? %>
                <%= button_to 'Add to order', order_items_path(id: product.id) %>
              <% end %>
            </ul>
          </li>
        </ul>
      <% end %>
    </div>
<% end %>
