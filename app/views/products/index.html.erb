<h1>Greta's Top Picks</h1>
<% @categories.each do |category| %>
  <h3><%= category.name %></h3>
  <% category.products.each do |product| %>
    <ul>
      <li><%= product.name %></li>
      <ul>
        <li><%= product.description %></li>
        <li><%= product.price %> SEK</li>
      </ul>
    </ul>
  <% end %>
<% end %>


