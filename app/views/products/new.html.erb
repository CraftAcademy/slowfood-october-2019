<h2>Create Item!</h2>
<%= form_with model: @product do |form|%>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :price %>
  <%= form.text_field :price %>
  <%= form.label :category %>
  <%= form.text_field :category%>

  <%= form.submit "Add product" %>
<% end %> 