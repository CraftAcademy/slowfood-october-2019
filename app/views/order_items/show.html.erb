<h2>Your picks</h2>
  <% @order_items.each do |item| %>
    <div class="addedFoodDiv"> 
    <%= item.item.name %>
    <%= item.item.description %>
    <%= item.item.price %> 
    </div>
    <% @total_price += item.item.price %>
  <% end %>
<div class="totalprice">
<h4> Total Price: <%= @total_price %></h4></div>